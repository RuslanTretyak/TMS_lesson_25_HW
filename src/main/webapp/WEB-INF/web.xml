<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>CurrentTimeMinsk</servlet-name>
    <servlet-class>task1.separate_servlet.CurrentTimeMinsk</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>task1.separate_servlet.CurrentTimeBeijing</servlet-name>
    <servlet-class>task1.separate_servlet.CurrentTimeBeijing</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AgeChecker</servlet-name>
    <servlet-class>task2.servlet.AgeChecker</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CurrentTimeMinsk</servlet-name>
    <url-pattern>/minsk</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>task1.separate_servlet.CurrentTimeBeijing</servlet-name>
    <url-pattern>/beijing</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AgeChecker</servlet-name>
    <url-pattern>/age_checker</url-pattern>
  </servlet-mapping>
</web-app>
